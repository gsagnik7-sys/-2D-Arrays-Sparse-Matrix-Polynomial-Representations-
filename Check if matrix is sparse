Python-->
class Solution:
    def isSparse(self, mat):
        n = len(mat)
        m = len(mat[0])
        zero_count = 0
        for i in range(n):
            for j in range(m):
                if mat[i][j] == 0:
                    zero_count += 1
        return zero_count > (n * m)//2


c-->
#include <stdbool.h>
bool isSparse(int n, int m, int mat[n][m]) {
    int zero_count = 0;
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < m; j++) {
            if (mat[i][j] == 0)
                zero_count++;
        }
    }
    return zero_count > (n * m) / 2;
}

class Solution:
    def isIdentity(self, mat):
        n = len(mat)
        for i in range(n):
            for j in range(n):
                if (i == j and mat[i][j] != 1) or (i != j and mat[i][j] != 0):
                    return False
        return True


C-->
#include <stdbool.h>
bool isIdentity(int n, int mat[n][n]) {
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            if ((i == j && mat[i][j] != 1) || (i != j && mat[i][j] != 0))
                return false;
        }
    }
    return true;
}
